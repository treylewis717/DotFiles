#!/usr/bin/env bash

echo ""
echo "--- Rust ---"
rustup update
echo "--- End Rust ---"

echo ""
echo "--- Doom Emacs ---"
doom sync
doom upgrade
echo "--- End Doom Emacs ---"

echo ""
echo "--- Flatpak ---"
flatpak update
echo "--- End Flatpak ---"

echo ""
echo "--- System ---"
paru -Syyu
echo "--- End System ---"

echo ""
echo "--- System Clean ---"
paru -Rns $(paru -Qtdq)
echo "--- End System Clean ---"
