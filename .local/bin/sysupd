#!/usr/bin/env bash

echo ""
echo "--- Rust ---"
rustup update
echo "--- End Rust ---"

echo ""
echo "--- Doom Emacs ---"
doom sync
doom upgrade
echo "--- End Doom Emacs ---"

echo ""
echo "--- Flatpak ---"
flatpak update
echo "--- End Flatpak ---"

echo ""
echo "--- XPAD ---"
dir=$PWD
cd /usr/src/xpad-0.4
sudo git fetch
sudo git checkout origin/master
sudo dkms remove -m xpad -v 0.4 --all
sudo dkms install -m xpad -v 0.4
cd $dir
echo "--- End XPAD ---"

echo ""
echo "--- System ---"
paru -Syyu
echo "--- End System ---"

echo ""
echo "--- System Clean ---"
paru -Rns $(paru -Qtdq)
echo "--- End System Clean ---"
